mixin dropdownNav
	.container
		nav.navbar.navbar-expand-lg.navbar-light.bg-white.pt-4.pl-0
			a.navbar-brand(href='#')
				p.text-center.text-md-left.text-primary.font-weight-bold Bridge
			button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarSupportedContent.collapse.navbar-collapse
				ul.navbar-nav.ml-auto
					li.nav-item.text-muted
						a.nav-link.active(aria-current='page', href='#') Landing
					li.nav-item.dropdown
						a#navbarDropdownpages.nav-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
							| Pages
						.dropdown-menu.dropdown-menu-md( aria-labelledby='navbarDropdownpages')
							.list-group.list-group-flush
								a.list-group-item(href='#feature')
									span.text-secondary.text-center.mb-0
										| Feature
								a.list-group-item(href='#about')
									span.text-secondary.mb-0
										| About	
								a.list-group-item(href='#testimonial')
									span.text-secondary.mb-0
										| Testimonilas
								a.list-group-item(href='#pricing')
									span.text-secondary.mb-0
										| Pricing	
								a.list-group-item(href='#faq')
									span.text-secondary.mb-0
										| FAQ					
					li.nav-item
						a.nav-link(href='#') Account
					li.nav-item.dropdown
						a#navbarDropdowndoc.nav-link(href='documentation.html' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
							| Documentation
						.dropdown-menu.dropdown-menu-md( aria-labelledby='navbarDropdowndoc')
							.list-group.list-group-flush
								a.list-group-item(href='#')
									//- Icon
									img(src=`${CWD}assets/img/gallery/document.png` alt='...').mw-100.img-fluid
									//- Content
									.ml-3
										//-Heading
										span.font-weight-bold.text-uppercase.text-primary.mb-0
											| Documentation
										//- Text
										p.text-secondary.mb-0
											| Customizing and building
								a.list-group-item(href='#')
									//- Icon
									img(src=`${CWD}assets/img/gallery/components.png` alt='...').mw-100.img-fluid
									//- Content
									.ml-3
										//- Heading
										span.font-weight-bold.text-uppercase.text-primary.mb-0
											| Components
										//-Text
										p.font-size-sm.text-secondary.mb-0
											| Full list of components
								a.list-group-item(href='#')
									//- Icon
									img(src=`${CWD}assets/img/gallery/bar_chart.png` alt='...').mw-100.img-fluid
									//-Content
									.ml-3
										//- Heading
										span.font-weight-bold.text-uppercase.text-primary.mb-0
											| Changelog 
											span.badge.badge-secondary.bg-light.text-primary 1.1.3
										//- Text
										p.text-secondary.mb-0
											| Keep track of changes
									//- Badge
									span.badge.badge-pill.badge-primary.ml-auto
										| 1.1.3
				a.navbar-btn.btn.btn-primary.ml-auto.hvr-float.py-2.px-3(href='!#' target='_blank') Buy now